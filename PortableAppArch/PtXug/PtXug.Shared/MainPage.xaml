<Page
    x:Class="PtXug.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PtXug"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Toast Number" Style="{StaticResource HeaderTextBlockStyle}"/>
            <TextBlock Margin="24" Text="{Binding CurrentToast}" HorizontalAlignment="Center" FontWeight="Black" Style="{StaticResource HeaderTextBlockStyle}"/>
            <Button Margin="24" Content="Create New Toast" HorizontalAlignment="Center" Command="{Binding ShowToastCommand}"/>
        </StackPanel>
    </Grid>
</Page>